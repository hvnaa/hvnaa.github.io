<body>
<h1>CHANGE DOMAIN CMH6</h1>

    <form id="inputForm">
        <textarea id="input1" placeholder="server"></textarea>
        <textarea id="input2" placeholder="old domain"></textarea>
        <textarea id="input3" placeholder="new domain"></textarea>
        <button type="button" id="showResult">Show Result</button>
    </form>

    <div id="resultForm" style="display: none;">
        <form>
            <textarea id="result" readonly></textarea>
            <button type="button" id="copyButton">Copy </button>
			<button onclick="clearInput()">Clear</button>
        </form>
    </div>

    <script>
        document.getElementById("showResult").addEventListener("click", function() {
            var input1 = document.getElementById("input1").value;
            var input2 = document.getElementById("input2").value;
            var input3 = document.getElementById("input3").value;
            
            var inputsArray1 = input1.split(/\s+/);
            var inputsArray2 = input2.split(/\s+/);
            var inputsArray3 = input3.split(/\s+/);
            
            var result = "";

            var maxLength = Math.max(inputsArray1.length, inputsArray2.length, inputsArray3.length);
            
            for (var i = 0; i < maxLength; i++) {
                result += (inputsArray1[i] || "") + ":";
                result += (inputsArray2[i] || "") + ":";
                result += (inputsArray3[i] || "") + "\n";
            }

            document.getElementById("result").value = result;
            document.getElementById("resultForm").style.display = "block";
        });

        document.getElementById("copyButton").addEventListener("click", function() {
            var resultTextarea = document.getElementById("result");
            resultTextarea.select();
            document.execCommand("copy");
            alert("COPIED");
        });
    </script>
